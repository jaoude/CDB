@using CDB.Common;

@model CDB.BLL.Dto.Request.UpdateLawyerDto

@{
    ViewData["Title"] = "";
}

<div class="row">
    <div class="column">
        <form asp-action="CreateAsync">
            <div class="form-group">
                <label asp-for="LawyerName" class="control-label"></label>
                <input asp-for="LawyerName" class="form-control" />
                <span asp-validation-for="LawyerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocsAttached" class="control-label"></label>
                <span asp-validation-for="DocsAttached" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LawyerId" class="control-label"></label>
                @*@<input asp-for="Docs1Attached" class="form-control" />*@
                @Html.CheckBoxFor(model => model.LawyerId, htmlAttributes: new { @checked = true })
                <span asp-validation-for="LawyerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LawyerAuthorization" class="control-label"></label>
                @*@<input asp-for="Docs1Attached" class="form-control" />*@
                @Html.CheckBoxFor(model => model.LawyerAuthorization, htmlAttributes: new { @checked = true })
                <span asp-validation-for="LawyerAuthorization" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>



<!-- YAMLI CODE START -->
<script type="text/javascript" src="https://api.yamli.com/js/yamli_api.js"></script>
<script type="text/javascript">
    if (typeof (Yamli) == "object" && Yamli.init({ uiLanguage: "en", startMode: "onOrUserDefault" })) {
        Yamli.yamlify("", { settingsPlacement: "bottomLeft" });
    }
</script>
<!-- YAMLI CODE END -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
